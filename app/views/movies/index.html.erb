<h1>All available movies</h1>
<p>Can't find the movie you are looking for? Just use our search bar below</p>

<% @movies.each do |movie| %>
  <div class="card-product">
    <%= image_tag movie.poster_url, alt: movie.title, class: 'movie-img rounded-top' %>
    <div class="card-product-infos movie-card">
      <h2><%= movie.title %></h2>
      <p><%= movie.overview %></p>
    </div>
  </div>
<% end %>
